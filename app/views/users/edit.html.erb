<div class="container">
  <div class="row">
    <div class="col-sm-12 px-5 ma-auto">
      <h2>User info</h2>
    </div>
  </div>
</div>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
  </div>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %><br>
  <%= f.submit "Update User" %>
<% end %>
